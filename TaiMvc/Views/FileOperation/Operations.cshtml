<add namespace="System.Web.Mvc.Ajax" />


<div>
    <h4>Zwykły upload</h4>
    <form asp-controller="FileOperation" asp-action="UploadFile"
          enctype="multipart/form-data" method="post">
        <input type="file" name="file" />
        <button type="submit">Prześlij</button>
    </form>

    <h4>Upload z hasłem</h4>
    <form asp-controller="FileOperation" asp-action="UploadEncryptionFile"
          enctype="multipart/form-data" method="post">
        <input type="file" name="file" />
        <button type="submit">Prześlij</button>
    </form>

</div>