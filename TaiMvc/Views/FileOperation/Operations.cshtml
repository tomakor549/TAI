<div>
    <h4>Single File Upload</h4>
    <form asp-controller="FileOperation" asp-action="OperationUpload"
          enctype="multipart/form-data" method="post">
        <input type="file" name="file" />
        <button type="submit">Submit</button>
    </form>

    <h4>Single File Upload Encrypt</h4>
    <form asp-controller="FileOperation" asp-action="OperationUploadEncryption"
          enctype="multipart/form-data" method="post">
        <input type="file" name="file" />
        <button type="submit">Submit</button>
    </form>

    
    <h4>Single File Upload Stream</h4>
    <form asp-controller="FileOperation" asp-action="StreamUpload"
          enctype="multipart/form-data" method="post">
        <input type="file" name="file" />
        <button type="submit">Submit</button>
    </form>
</div>